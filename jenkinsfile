pipeline {
    agent any
    options {
        skipStagesAfterUnstable()
    }
environment {
        AWS_ACCOUNT_ID="897901741304"
        AWS_DEFAULT_REGION="us-east-1"
        IMAGE_REPO_NAME="noderepo"
        IMAGE_TAG="${env.BUILD_NUMBER}"
        REPOSITORY_URI = "897901741304.dkr.ecr.us-east-1.amazonaws.com/noderepo"
    }
    stages {
         stage('Clone repository') { 
            steps { 
                script{
                checkout scm
                }
            }
        }

        stage('Build') { 
            steps { 
                script{
                 app = docker.build("underwater")
                }
            }
        }
        stage('Test'){
            steps {
                 echo 'Empty'
            }
        }
        stage('Deploy') {
            steps {
sh """aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 897901741304.dkr.ecr.us-east-1.amazonaws.com"""
sh """docker tag ${IMAGE_REPO_NAME}:${IMAGE_TAG} ${REPOSITORY_URI}:${IMAGE_TAG}"""
sh """docker push ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${IMAGE_REPO_NAME}:${IMAGE_TAG}"""
                
                    }
                }
            }
        }
    }
}
